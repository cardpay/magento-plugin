<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Cardpay_Core::css/style.css"/>
        <css src="Cardpay_Core::css/CPv1.css"/>
    </head>
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="billing-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="payment" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="renders" xsi:type="array">
                                                            <!-- merge payment method renders here -->
                                                            <item name="children" xsi:type="array">
                                                                <item name="cardpay-payments" xsi:type="array">
                                                                    <item name="component" xsi:type="string">
                                                                        Cardpay_Core/js/view/cardpay-payments
                                                                    </item>
                                                                    <item name="methods" xsi:type="array">
                                                                        <item name="cardpay_custom" xsi:type="array">
                                                                            <item name="isBillingAddressRequired"
                                                                                  xsi:type="boolean">
                                                                                true
                                                                            </item>
                                                                        </item>
                                                                        <item name="cardpay_customticket"
                                                                              xsi:type="array">
                                                                            <item name="isBillingAddressRequired"
                                                                                  xsi:type="boolean">
                                                                                true
                                                                            </item>
                                                                        </item>
                                                                        <item name="cardpay_custompix"
                                                                              xsi:type="array">
                                                                            <item name="isBillingAddressRequired"
                                                                                  xsi:type="boolean">
                                                                                true
                                                                            </item>
                                                                        </item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>

                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="summary" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="totals" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="discount_coupon" xsi:type="array">
                                                            <item name="component" xsi:type="string">
                                                                Cardpay_Core/js/view/checkout/cart/totals/discount_coupon
                                                            </item>
                                                            <item name="sortOrder" xsi:type="string">50</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="template" xsi:type="string">
                                                                    Cardpay_Core/checkout/cart/totals/discount_coupon
                                                                </item>
                                                                <item name="title" xsi:type="string" translate="true">
                                                                    Coupon discount of the Cardpay
                                                                </item>
                                                            </item>
                                                        </item>

                                                        <item name="finance_cost" xsi:type="array">
                                                            <item name="component" xsi:type="string">
                                                                Cardpay_Core/js/view/checkout/cart/totals/finance_cost
                                                            </item>
                                                            <item name="sortOrder" xsi:type="string">50</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="template" xsi:type="string">
                                                                    Cardpay_Core/checkout/cart/totals/finance_cost
                                                                </item>
                                                                <item name="title" xsi:type="string" translate="true">
                                                                    Financing Cost
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="content">
            <block class="Cardpay\Core\Block\Custom\Installments" name="installment-options"
                   template="Cardpay_Core::custom/installments.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
